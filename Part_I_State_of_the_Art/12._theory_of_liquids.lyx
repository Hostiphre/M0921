\begin_inset Formula 
\begin{equation}
\rho^{(1)}(\mathbf{r}_{1})=\rho_{0}\exp\left(-\beta V_{\mathrm{int}}(\mathbf{r}_{1})+\int\mathrm{d}\mathbf{\mathbf{r}}_{2}\Delta\rho^{(1)}(\mathbf{r}_{2})c^{(2)}(\mathbf{r}_{1},\mathbf{r}_{2})+\mathcal{O}(\Delta\rho{}^{2})\right)\label{eq:1.minimize-anal}
